<Window x:Class="KinectMyo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMyo"
        mc:Ignorable="d"
        Title="MainWindow"  WindowState="Maximized"
        Closing="MainWindow_Closing">
    <Grid Name="MainCanvas" Margin="0,0,0,0" Width="2560" Height="1440">
        <Image Name="myImage"  />

        <Grid Name="SkeletonGrid" Background="Transparent"  Width="2560" Height="1440" >
            <Image Name="SkeletonImage" Stretch="None" ></Image>
        </Grid>
    </Grid>
</Window>
